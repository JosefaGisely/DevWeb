<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">


    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controler.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlunoServlet</servlet-name>
        <servlet-class>controler.AlunoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicoGeralServlet</servlet-name>
        <servlet-class>controler.PublicoGeralServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicoGeralServlet</servlet-name>
        <url-pattern>/PublicoGeralServlet</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>meuFiltro</filter-name>
        <filter-class>filtro</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>meuFiltro</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>
